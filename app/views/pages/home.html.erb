<div class="jumbotron" >
    <div style="position: fixed; z-index: -99; width: 100%; height: 100%; top: 70; right: 0; bottom: 0; left: 0; overflow: hidden; ">
        <iframe frameborder="0" height="100%" width="100%"
            src="https://youtube.com/embed/gF0rrpMH-Jo?autoplay=1&controls=0&showinfo=0&autohide=1&mute=1&loop=1">
        </iframe>
    </div>
    <div class="jumbotron-text text-secondary" style="position: relative; z-index: 100">
        <h1 class="display-4">Move & Groove</h1>
        <p class="lead">Where do you want to burn calories today ?</p>
        <% if current_user %>
            <p class="text-primary">Hello <%= current_user.name %>, nice to see you again</p>
            <%= link_to 'Add New Activity', new_activity_path, class: "btn btn-primary" %>

            <% else %>
        <div class="mx-auto mb-1" >
            <%= link_to "Register", new_user_registration_path, class: "btn btn-info", type: "button"  %>
            <%= link_to "Login", new_user_session_path, class: "btn btn-success", type: "button"  %>
        <% end %>
        </div>
    </div>
</div>
