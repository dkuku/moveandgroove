<p id="notice"><%= notice %></p>
<div class="container">
<h1 class="inline">Activity Lists</h1>
<%= link_to 'New Activity', new_activity_list_path, class: "button" %>

<table class="table">
  <thead>
    <tr>
      <th scope="col">No.</th>
      <th scope="col">Name</th>
      <th scope="col">Theme</th>
      <th scope="col">Main image</th>
      <th scope="col">Thumb image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activity_lists.each_with_index do |activity_list, idx| %>
      <tr>
        <td><%= idx + 1 %></td>
        <td><%= activity_list.name %></td>
        <td><%= activity_list.theme %></td>
        <td><%= activity_list.main_image %></td>
        <td><%= activity_list.thumb_image %></td>
        <td>
        <div class="btn-group btn-group-sm">
            <%= link_to 'Show', activity_list, class: "btn btn-info" %>
            <%= link_to 'Edit', edit_activity_list_path(activity_list) , class: "btn btn-warning"  %>
            <%= link_to 'Destroy', activity_list, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
        </tr>
    <% end %>
  </tbody>
</table>


